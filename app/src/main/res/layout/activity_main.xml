<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Welcome_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Welcome to WhatsApp "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textColor="#128C7E"
        android:textStyle="bold"
        android:layout_marginTop="35sp"
         />
    <ImageView
        android:id="@+id/homepage_image"
        android:layout_margin="50sp"
        android:layout_width="300sp"
        android:layout_height="300sp"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_homepage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/whatsappcode_homepage"

        />
    <TextView
        android:id="@+id/Privacy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/homepage_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="17sp"
        android:text=' Read our Privacy Policy. Tap \" Agree and continue\" to
        \n                        accept the Terms of Service.  '
        android:layout_marginTop="50sp"
        android:layout_marginLeft="17sp"
        />
        <Button
            android:id="@+id/Agree_btn_homepage"
            android:layout_width="340sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Privacy_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text=" AGREE AND CONTINUE "
            android:textColor="#FFFFFF"
            android:background="#25D366"
            android:layout_margin="30sp"
            android:textSize="20sp"
            android:gravity="center"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Agree_btn_homepage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=" WhatsApp from Facebook"
        android:layout_marginTop="10sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>