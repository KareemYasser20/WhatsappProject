<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="370sp"
    android:layout_height="300sp"
    android:layout_gravity="center"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" We will be verifying the Phone number: "
        android:textSize="24sp"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="16sp"
        />

    <TextView
        android:id="@+id/number_entered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +20 1200333791 "
        android:textSize="24sp"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Is this OK, or would you like to edit the number?"
        android:textSize="24sp"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="16sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/edit_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:textColor="#128C7E"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="16sp"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/Ok_choice"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="#128C7E"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="250sp"


        />
    </LinearLayout>


</LinearLayout>